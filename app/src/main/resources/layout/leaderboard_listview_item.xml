<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="@color/win_background_tranc" android:gravity="center_horizontal"
    android:orientation="horizontal" android:weightSum="10">

    <!-- User id (pid) - will be HIDDEN - used to pass to other activity -->

    <TextView android:id="@+id/lv_uid" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="0" android:visibility="gone" />

    <!-- Номер по  порядку -->

    <TextView android:id="@+id/lv_leadPlase" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_gravity="left"
        android:layout_weight="1.5" android:background="@color/win_background_tranc"
        android:text="10000" android:textColor="@color/win_text" android:textSize="15dp"
        android:textStyle="bold" />

    <!-- Name Label -->

    <ImageView android:id="@+id/lv_imFlag" android:layout_width="0dp"
        android:layout_height="fill_parent" android:layout_weight="1.5"
        android:background="@color/win_background_tranc" android:scaleType="fitCenter"
        android:src="@drawable/flag_wr" />

    <TextView android:id="@+id/lv_nick" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_gravity="left" android:layout_weight="5"
        android:background="@color/win_background_tranc" android:gravity="left"
        android:paddingLeft="6dip" android:text="wwwwwwwwwww" android:textColor="@color/win_text"
        android:textSize="15dip" android:textStyle="bold" />

    <!-- record value  Label -->

    <TextView android:id="@+id/lv_recValue" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_gravity="center"
        android:layout_weight="2" android:background="@color/win_background_tranc"
        android:gravity="center_horizontal" android:paddingLeft="6dip" android:text="3600"
        android:textColor="@color/win_text" android:textSize="15dip" android:textStyle="bold" />

    <!-- record put date -->

    <TextView android:id="@+id/lv_recDate" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_weight="0"
        android:background="@color/win_background_tranc" android:paddingLeft="6dip"
        android:textSize="15dip" android:visibility="gone" />

</LinearLayout>